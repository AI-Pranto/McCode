#========================#
# Deleting Old olcAccess #
#========================#
# dn: olcDatabase={0}config,cn=config
dn: olcDatabase={1}hdb
changetype: modify
delete: olcAccess
olcAccess: to attrs=userPassword,shadowLastChange
  by self write
  by anonymous auth
  by dn="cn=admin,dc=nodomain" write
  by * none
-
delete: olcAccess
olcAccess: to dn.base=""
  by * read
-
delete: olcAccess
olcAccess: to *
  by self write
  by dn="cn=admin,dc=nodomain" write
  by * read
-
