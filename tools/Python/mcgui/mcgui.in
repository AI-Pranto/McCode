#!/bin/sh
# Wrapper script for @P@gui-py

# First ensure that we follow symlink if needed
LINK=`readlink $0`

# Am I a symlink?
if [ "x$LINK" != "x" ]; then
    LIB=`dirname $ME`
else
    LIB=`dirname $0`
fi
LIB="$LIB/../tools/Python/@P@gui"
TOOL="@P@gui"
VERS="@MCCODE_VERSION@"

canrun() {
    if ! [ -x ${LIB}/mcgui.py ]; then
        exit 127;
    fi

    modules="PyQt4.Qsci"
    cmd=""
    for name in ${modules}; do
        cmd="${cmd}import ${name}; "
    done
    python3 -c "${cmd}"
}

if ( canrun ); then
    ${LIB}/mcgui.py $*
else
    echo ":: Failed to run Python ${TOOL}, trying old Perl version."
    echo ":: If this fails too, consider reinstalling ${TOOL}."
    echo ""

    # Try old Perl-version of mcgui if Python version cannot run
    ${TOOL} $*
fi
